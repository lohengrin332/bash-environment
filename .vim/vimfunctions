function LoadSourceFile()
  if has("perl")
    if &filetype == "perl"
      :perl <<EOF
#EOF
        use strict;
        my $vim_utils = "$ENV{CODE_BASE}/lib";
        VIM::Msg("$vim_utils");
        return unless(-e $vim_utils);
        unshift(@INC, $vim_utils);
        require VimTools;
        &VimTools::loadSourceFile();
EOF
    endif
  endif
endfunction

function OpenSourceFile()
  if has("perl")
    if &filetype == "perl"
      :perl <<EOF
#EOF
        use strict;
        my $vim_utils = "$ENV{CODE_BASE}/lib";
        VIM::Msg("$vim_utils");
        return unless(-e $vim_utils);
        unshift(@INC, $vim_utils);
        require VimTools;
        &VimTools::openSourceFile();
EOF
    endif
  endif
endfunction

function ShowINC()
  if has("perl")
    :perl <<EOF
      use strict;
      my $str = join(', ', @INC);
      VIM::Msg($str);
EOF
  endif
endfunction

function TestExec()
  if has("perl")
    :perl <<EOF
      use strict;
EOF
  endif
endfunction
